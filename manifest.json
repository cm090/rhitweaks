{
  "manifest_version": 3,
  "name": "RHITweaks",
  "description": "Customize the look and feel of RHIT pages (https://github.com/cm090/rhitweaks)",
  "version": "6.4",
  "permissions": [
    "storage"
  ],
  "icons": {
    "1024": "images/icon.png"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": "images/icon.png"
  },
  "content_scripts": [
    {
      "js": [
        "scripts/moodle.js",
        "popup/jquery.min.js",
        "popup/bootstrap.min.js"
      ],
      "matches": [
        "https://moodle.rose-hulman.edu/*"
      ],
      "run_at": "document_end"
    },
    {
      "js": [
        "scripts/schedule.js",
        "popup/jquery.min.js"
      ],
      "matches": [
        "https://prodwebxe-hv.rose-hulman.edu/*",
        "https://prodwebxe7-hv.rose-hulman.edu/*"
      ],
      "run_at": "document_end"
    },
    {
      "js": [
        "scripts/banner.js"
      ],
      "matches": [
        "https://bannerssb.rose-hulman.edu/*"
      ],
      "run_at": "document_end"
    },
    {
      "js": [
        "scripts/print.js"
      ],
      "matches": [
        "https://print.rhit.cf/*",
        "https://print.rose-hulman.edu:9192/*"
      ],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "styles/*",
        "assets/*",
        "popup/*"
      ],
      "matches": [
        "https://moodle.rose-hulman.edu/*",
        "https://prodwebxe-hv.rose-hulman.edu/*",
        "https://prodwebxe7-hv.rose-hulman.edu/*",
        "https://bannerssb.rose-hulman.edu/*",
        "https://print.rhit.cf/*",
        "https://print.rose-hulman.edu:9192/*"
      ]
    }
  ],
  "background": {
    "service_worker": "scripts/print-background.js"
  }
}