{
    "manifest_version": 3,
    "name": "RHITweaks",
    "description": "Bring additional functionality to RHIT websites",
    "version": "1.0",
    "permissions": [
        "storage"
    ],
    "icons": {
        "128": "images/icon.png"
    },
    "action": {
        "default_popup": "popup/popup.html",
        "default_icon": "images/icon.png"
    },
    "content_scripts": [
        {
            "js": [
                "scripts/moodle.js",
                "popup/jquery.min.js",
                "popup/bootstrap.min.js"
            ],
            "matches": [
                "https://moodle.rose-hulman.edu/*"
            ],
            "run_at": "document_end"
        },
        {
            "js": [
                "scripts/schedule.js",
                "popup/jquery.min.js"
            ],
            "matches": [
                "https://prodwebxe-hv.rose-hulman.edu/*"
            ],
            "run_at": "document_end"
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "styles/*"
            ],
            "matches": [
                "https://moodle.rose-hulman.edu/*",
                "https://prodwebxe-hv.rose-hulman.edu/*"
            ]
        }
    ]
}